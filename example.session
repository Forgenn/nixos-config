services.xserver.displayManager = {
    sddm.enable = true;
    defaultSession = "plasma6+i3";
    session = [
        {
            manage = "desktop";
            name = "plasma6+i3";
            start = ''exec env KDEWM=${pkgs.i3-gaps}/bin/i3 ${pkgs.plasma-workspace}/bin/startplasma-x11'';
        }
        {
            manage = "desktop";
            name = "i3";
            start = ''exec ${pkgs.i3-gaps}/bin/i3'';
        }
    ];
};
